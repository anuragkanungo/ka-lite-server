
upstream kalite {
    server unix:///tmp/kalite
}

server {

    listen 8008;

    location /static {
        alias   /var/www/ka-lite/kalite/static/;
    }

    location /media {
        alias   /var/www/ka-lite/kalite/media/;
    }

    location /content {
        alias   /var/www/ka-lite/kalite/content/;
    }

    location /favicon.ico {
        empty_gif;
    }

    location / {
        uwsgi_pass kalite;
        include uwsgi_params;
    }

}